void main(){
  int salary=17000;
  if(salary>=20000){
    print("you will get the hike again");//this are the conditional statements
  }
  else if(salary>=15000 && salary<20000){
    print("need a hike");
  }
  else if(salary>=10000 && salary<15000){
    print("need to improve for salary hike");
  }
  else{
    print("you need to work hard");
  }
}
